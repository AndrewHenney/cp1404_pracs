<Label>:
    canvas.before:
        Color:
            rgba: 0,0,0,1

    color: 1, 1, 1, 1


BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            text: '34'

            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text,1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text,-1)
    Label:
        id: output_label
        font_size: 48

        text: '54.717'
